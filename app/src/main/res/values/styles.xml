<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Smile_TextView_Gray">
        <item name="android:textColor">@color/base_color_text_gray</item>
    </style>

    <style name="Smile_TextView_White">
        <item name="android:textColor">@color/base_color_text_white</item>
    </style>

    <style name="Smile_Button_theme" parent="Smile_TextView_White">
        <item name="android:background">@drawable/btn_login_selector</item>
    </style>
</resources>
